body {
  margin: 0;
  padding: 0;
  font-family: 'Ubuntu';
  font-size: 1em;
  display: grid;
  grid-template-columns: 20px 1fr 20px;
  grid-template-rows: 20px 1fr 20px;
}

#app {
  display: grid;
  grid-column: 2;
  grid-row: 2;
  grid-template-columns: 1fr;
  grid-auto-rows: 60px;
  padding: 10px;
}

#app h1 {
  grid-row: 1;
  margin: 0px;
  padding: 0;
  font-weight: normal;
}

#app .task {
  display: grid;
  grid-template-columns: 25px 20px auto;
  min-height: 50px;
}

#app .task:hover .task-content, #app .task .task-content:focus {
  border-bottom: 2px solid black;
}

#app .task:hover .task-checkbox {
  border: 2px solid black;
}

#app .task-completed .task-content {
  text-decoration: line-through;
}

#app .task-completed .task-checkbox::before {
  content: '';
  display: block;
  height: 20px;
  width: 20px;
  background: black;
  position: absolute;
  border-radius: 100%;
  margin: 3px;
}

#app .task .task-checkbox {
  grid-column: 1;
  height: 25px;
  width: 25px;
  border-radius: 100%;
  border: 1px solid black;
  margin: auto 0;
}

#app .task .task-checkbox:hover {
  cursor: pointer;
}

#app .task .task-content {
  grid-column: 3;
  min-height: 25px;
  margin: auto 0;
  overflow-wrap: break-word;
  border: none;
}